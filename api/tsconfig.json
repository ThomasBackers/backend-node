{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "paths": {
      "@/app/*": ["app/*"],
      "@/controllers/*": ["app/controllers/*"],
      "@/database/*": ["app/database/*"],
      "@/middlewares/*": ["app/middlewares/*"],
      "@/models/*": ["app/models/*"],
      "@/routes/*": ["app/routes/*"]
    }
  }
}
